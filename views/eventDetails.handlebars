<h1>{{info.eventName}}</h1>

{{#if owner}}
<h2>You are the owner of this event!</h2>
<h3>Event Details</h3>
<ul>
    <li>College: {{info.college}}</li>
    <li>Location: {{info.location}}</li>
    <li>Start Time: {{info.startTime}}</li>
    <li>End Time: {{info.endTime}}</li>
    <li>Posted By: {{info.postedBy}}</li>
    <li>Tags: {{info.tags}}</li>
    <li>Description: {{info.description}}</li>
    <li>Capacity: {{info.capacity}}</li>
    <li>Numbers of Users Registered: {{info.numUserRegistered}}</li>
    <li>UsersRegistered: {{info.usersRegistered}}</li>
</ul>
{{else}}
<h3>Event Details</h3>
<ul>
    <li>College: {{info.college}}</li>
    <li>Location: {{info.location}}</li>
    <li>Start Time: {{info.startTime}}</li>
    <li>End Time: {{info.endTime}}</li>
    <li>Posted By: {{info.postedBy}}</li>
    <li>Tags: {{info.tags}}</li>
    <li>Description: {{info.description}}</li>
    <li>Capacity: {{info.capacity}}</li>
    <li>Numbers of Users Registered: {{info.numUserRegistered}}</li>
</ul>
{{/if}}

<form method="POST" action="/events/register/{{info._id}}" id="register-btn">
    <input type="submit" value="Register For This Event">
</form>
<form method="POST" action="/events/favorite/{{info._id}}" id="favorite-btn">
    <input type="submit" value="Add Event To Favorites">
</form>


<form method="POST" action="/comments/{{info._id}}" id="makecomment-form">
    <label for="comment">Comment:</label>
    <input type="text" id="comment" name="comment">
    <button type="submit">submit</button>
</form>

<div id="allComments">
    {{#each info.comment}} 
        <div class="comment">
            <h2>{{userName}} commented on {{commentDate}}:</h2>
            <p>{{body}}</p>
        </div>
    {{/each}}
</div>

<div id="error" hidden>I'm an error</div>