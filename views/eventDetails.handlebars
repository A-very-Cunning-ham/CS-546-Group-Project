<h1>{{info.eventName}}</h1>
<h2>Posted by {{info.postedBy}} from {{info.college}}</h2>
<p>{{info.description}}</p>
<p>from {{info.startTime}} to {{info.endTime}}</p>

{{#if owner}}
    <h2>Edit Event:</h2>

<form method="PATCH" action="/created/{{info._id}}" id="editevent-form" encType="multipart/form-data">
    <label for="eventName">Event name:</label>
    <input type="text" id="eventName" name="eventName"><br>
    <label for="location">Location:</label>
    <input type="text" id="location" name="location"><br>
    <label for="startTime">Start time:</label>
    <input type="datetime-local" id="startTime" name="startTime"><br>
    <label for="endTime">End time:</label>
    <input type="datetime-local" id="endTime" name="endTime"><br>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description"><br>
    <label for="capacity">Capacity:</label>
    <input type="number" min="1" id="capacity" name="capacity"><br>
    <label for="tags">Tags:</label>
    <input type="text" id="tags" name="tags"><br>
    <label for="image">Upload image here:</label>
    <input type="file" id="image" name="image"><br>
    <button type="submit" class="submitbutton">submit</button>
</form>
<p class="error">{{error}}</p>
{{/if}}

<form method="POST" action="/events/register/{{info._id}}" id="register-btn">
    <input type="submit" value="Register For This Event">
</form>
<form method="POST" action="/events/favorite/{{info._id}}" id="favorite-btn">
    <input type="submit" value="Add Event To Favorites">
</form>

{{#each info.comments}}
    <div class="comment">
        <h2>{{userName}} commented on {{commentDate}}:</h2>
        <p>{{body}}</p>
    </div>
{{/each}}
